{
  "compilerOptions": {
    "resolveJsonModule": true /* Enable importing .json files. */,

    /* Emit */
    "outDir": "./build" /* Specify an output folder for all emitted files. */,

    "lib": ["es5", "es6", "dom"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
